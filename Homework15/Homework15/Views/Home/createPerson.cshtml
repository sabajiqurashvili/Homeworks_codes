@model Homework15.Models.Person

<h2>Book Appointment</h2>

<form asp-action="CreatePerson" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Doctor"></label>
        <input asp-for="Doctor" class="form-control" />
        <span asp-validation-for="Doctor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Time"></label>
        <input asp-for="Time" class="form-control" type="time" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}